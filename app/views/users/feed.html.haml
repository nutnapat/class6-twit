= link_to 'Profile', "/profile/#{@user.name}"
%table
  %thead
    %tr
      %th Msg
      %th User
      %th Name
      %th created
      %th like
      %th 
      %th

  %tbody
    - @posts.each do |post|
      %tr
        %td= post.msg
        %td= post.user_id
        %td= button_to "#{post.user.name}", "/profile/#{post.user.name}" 
        %td= post.created_at
        %td 
          - if post.user_likes.include?(@user)
            = button_to "Unlike", unlike_post_path(post.id) , method: "POST",class:"btn btn-primary unlike-btn mt-2"
          - else
            = button_to "Like", like_post_path(post.id) , method: "POST" ,class:"btn btn-secondary  like-btn mt-2"
          - if post.likes.count != 0
            %button.btn.btn-primary.btn-showUser.mt-2{"data-bs-target" => "#userLike", "data-bs-toggle" => "modal", :type => "button"}
              -#----------------number of like------------------
              = post.likes.count.to_s + " Likes"
            #userLike.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel",   :tabindex => "-1"}
              .modal-dialog.modal-dialog-scrollable
                .modal-content
                  .modal-header
                    %h5#exampleModalLabel.w-100.modal-title.text-center liker
                    %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", :type  => "button"}
                  .modal-body
                    - post.user_likes.each do |user|
                      %a.card-link-feed{:href => "profile/#{user.name}",:method => "get",:style => "font-size:25px"}
                        = user.name