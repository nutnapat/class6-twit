%h1 Listing posts

%table{id:"post"}
  %thead
    %tr
      %th Msg
      %th User
      %th Updated
      %th
      %th
      %th

  %tbody
    - @posts.each do |post|
      %tr
        %td= post.msg
        %td= post.user_id
        %td= post.updated_at
        %td= link_to 'Show', post
        %td= link_to 'Edit', edit_post_path(post)
        %td= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Post', new_post_path

:javascript
  $('#post').DataTable(); 